<scroll-view scroll-x="true" class="menubar">
  <!--上方菜单栏-->
  <view class="menu">

    <text class="{{onShowGroup=='all'?'active':''}}" id="all" bindtap="clickmenu">全部</text>

  </view>
</scroll-view>
<!--内容-->
<scroll-view scroll-y="true" class="content" scroll-top='{{scrollTop}}' style="height: {{windowHeight}}px; width: {{windowWidth}}px;" >

  <view wx:for="{{list}}" wx:key="index">
    <view class="navbutton" catchtap="clickbutton" id="{{item.contract_id}}">
        
        <!--文字部分-->
        <!--标题文字-->
        <text class='titleText'>
          {{item.title}}
        </text>

      <!--分享按钮-->
      <view class='digest'>
        {{item.content}}
      </view>
      
      <view class='mat'></view>

      <button class='sharebutton' open-type='share' data-imUrl="{{item.article.thumb_url}}" data-contractId="{{item.contract_id}}" 
      data-id="{{index}}" catchtap='sharebutton'>
        <image class='share' src='share2.png'></image>
      </button>

    </view>

  </view>
</scroll-view>
